section
	padding 40px
	h3
		font-family $header-font
		font-size 40px
		color $accent-color
		text-align center

	.face-lockup
		max-width 780px
		display flex
		margin 0 auto
		.face
			background '../img/mypic.jpg'
			background-position center center
			background-size 200px 200px
			border-radius 100%
			height 200px
			width 200px
			margin 0 auto

	p
		margin-top 100px
		text-align center
		font-family $base-font-family
		font-size 20px
